{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**", "reports/**"]
    },
    "test:e2e": {
      "cache": false
    },
    "db:seed": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "storybook": {
      "cache": false,
      "outputs": ["storybook-static/**"]
    }
  }
}
